---
import '@/styles/global.css';
// Supports weights 400-700
import '@fontsource-variable/stix-two-text/wght-italic.css';
// Supports weights 300-700
import '@fontsource-variable/space-grotesk';
// Supports weights 100-800
import '@fontsource-variable/jetbrains-mono';

import { Header, Head, Footer } from '@/components/shared';
import { Button } from '@/components/ui/button';
---

<html lang="en" class="dark print:font-cv">
  <head>
    <Head title="Miguel Mendoza Curriculum" />
  </head>
  <body class="relative h-full w-full bg-background print:bg-white print:text-black">
    <div class="print:hidden">
      <Header />
    </div>
    <main class="mx-auto max-w-4xl not-print:px-5 not-print:pt-25 not-print:lg:px-0">
      <slot />
    </main>
    <div class="fixed right-5 bottom-5 print:hidden">
      <a href="/cv.pdf" target="_blank" rel="noopener noreferrer" id="btn:download:cv">
        <Button> Download CV </Button>
      </a>
    </div>
    <div class="print:hidden">
      <Footer />
    </div>
  </body>
</html>
